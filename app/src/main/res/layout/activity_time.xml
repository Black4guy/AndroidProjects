<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".Time">


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        android:elevation="4dp"
        android:background="@drawable/relative_layout">


        <Button
            android:id="@+id/btn_from"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="41dp"
            android:text="In Time">

        </Button>

        <TextView
            android:id="@+id/in_time"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_alignBottom="@+id/btn_from"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:textSize="30dp">

        </TextView>

        <Button
            android:id="@+id/btn_To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/btn_from"
            android:layout_alignStart="@+id/btn_from"
            android:layout_centerVertical="true"

            android:text="Out Time">

        </Button>

        <TextView
            android:id="@+id/out_time"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_alignBottom="@+id/btn_To"
            android:layout_alignLeft="@+id/in_time"
            android:layout_alignStart="@+id/in_time"
            android:textSize="30dp">

        </TextView>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="106dp"
            android:layout_height="49dp"

            android:layout_alignEnd="@+id/out_time"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/out_time"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:text="Submit">

        </Button>

    </RelativeLayout>
</RelativeLayout>
